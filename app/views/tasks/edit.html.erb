<h1>id: <%= @task.id %> のメッセージ編集ページ</h1>

<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  
  <%= f.label :status, 'ステータス' %>
  <%= f.select :status, [["未着手", "未着手"], ["進行中", "進行中"], ["確認待ち", "確認待ち"], ["完了済", "完了済"]] ,class:"form-control" %>

  <%= f.submit '更新する' %>
<% end %>

<%= link_to '一覧に戻る', tasks_path %>